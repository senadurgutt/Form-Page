@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="card card-body my-3">
    <form action="" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select 
                        name="category" 
                        class="form-select"
                            asp-items="@(new SelectList(Model.Categories,"CategoryId", "Name" ,Model.SelectedCategory))">
                            @* asp-items="ViewBag.Categories"
                        select name eklemek url de verilen name in gözükmesini sağlar *@
                        <option value="">Hepsi</option>
                    </select>
                </div> 
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div> 
<table class = "table table-border table-striped">
    <thead>
        <tr>
            <th style="width: 100px"> @Html.DisplayNameFor( m => m.Products[0].ProductId) </th>
            <th style="width: 100px"> @Html.DisplayNameFor(m => m.Products[0].Image) </th>
            <th style="width: 100px"> @Html.DisplayNameFor(m => m.Products[0].Name) </th>
            <th style="width: 100px"> @Html.DisplayNameFor(m => m.Products[0].Price) </th>
            <th style="width: 130px"></th>


        </tr>
    </thead>
    <tbody>
        @foreach(var prd in @Model.Products)
        {
            <tr>
                <td>@prd.ProductId</td>
                <td>
                    <img src="~/img/@prd.Image" class="img-fluid" alt=""/>

                </td>
                <td>@prd.Name</td>
                <td>@prd.Price</td>
                <td> <a href="" class="btn btn-sm btn-primary">Edit</a>
                <td> <a href="" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>